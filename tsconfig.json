{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "skipLibCheck": true,
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "paths": {
      "@shared/*": ["./packages/shared/src/*"],
      "@popup/*": ["./packages/extension/src/popup/*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "./packages/**/tests/**",
    "./packages/**/dist/**",
    "**/*.test.ts",
    "**/__mocks__/*"
  ],
  "references": [
    {
      "path": "packages/shared"
    },
    {
      "path": "packages/www"
    },
    {
      "path": "packages/extension"
    }
  ]
}
