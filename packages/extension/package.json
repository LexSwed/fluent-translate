{
  "name": "@edge-translate/extension",
  "description": "Edge Translate browser extension",
  "version": "1.8.0",
  "author": "lexswed",
  "private": true,
  "scripts": {
    "dev": "parcel src/manifest.json --host localhost --target webext-dev --config @parcel/config-webextension",
    "build": "parcel build src/manifest.json --target webext-prod --config @parcel/config-webextension",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "check": "tsc --noEmit",
    "ci": "yarn build && yarn lint && yarn check"
  },
  "targets": {
    "webext-dev": {
      "distDir": "./dist",
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "distDir": "./dist"
    }
  },
  "browserslist": [
    "last 2 Chrome version"
  ],
  "bugs": {
    "url": "https://github.com/LexSwed/edge-translate/issues"
  },
  "homepage": "https://github.com/LexSwed/edge-translate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LexSwed/edge-translate.git"
  },
  "license": "MIT",
  "dependencies": {
    "@fxtrot/ui": "^1.0.224",
    "@heroicons/react": "^1.0.5",
    "@sentry/browser": "^6.5.1",
    "@stitches/react": "^1.2.6",
    "@webcomponents/webcomponentsjs": "^2.6.0",
    "debounce": "^1.2.1",
    "framer-motion": "^5.5.6",
    "jotai": "^1.5.0",
    "nanoid": "^3.1.23",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "swr": "^1.2.0-beta.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.1.1",
    "@types/chrome": "^0.0.175",
    "@types/debounce": "^1.2.0",
    "parcel": "^2.1.1"
  }
}
